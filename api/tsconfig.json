{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@entities/*": ["entities/*"],
      "@errors/*": ["errors/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "prettier.config.js", "babel.config.js", "dist"]
}
